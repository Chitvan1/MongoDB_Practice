<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Chats</title>
    <link rel="stylesheet" href="style.css" />
  </head>
  <body>
    <h3>All Chats!</h3>
    <form method="GET" action="/chats/new">
      <button>New Chat</button>
    </form>
    <% for (let chat of chats) { %>
    <div class="chat">
      <p>From: <i><%= chat.from %></i></p>
      <div class="msg">
        <p><%= chat.msg %></p>
        <form method="get" action="/chats/<%= chat._id %>/edit">
          <button>edit</button>
        </form>
        <br />
        <form method="post" action="/chats/<%= chat._id %>?_method=DELETE">
          <button>Delete</button>
        </form>
      </div>
      <p>Received by <i><%= chat.to %></i></p>
      <hr />
      <p><%= chat.created_at.toString().split(" ")[4] %><br /></p>
      <p>
        <%= chat.created_at.toString().split(" ").slice(0,4).join(" ") %><br />
      </p>
    </div>
    <br /><br />
    <% } %>
  </body>
</html>
